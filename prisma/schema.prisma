// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email           String    @unique
  name            String
  image           String    @map("profilePicture")
  
  verified        Boolean?

  roleTag         String    @default("USER")
  role            Role      @relation("Role", fields: [roleTag], references: [tag])     

  posts           Post[]    @relation("Author") 
  accounts        Account[]
  sessions        Session[]
  published       Post[]    @relation("Published") 
}

model Role {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tag             String    @unique
  name            String    

  createPosts     Boolean   @default(false)
  publishPosts    Boolean   @default(false)
  editPosts       Boolean   @default(false)
  deletePosts     Boolean   @default(false)
  deleteUsers     Boolean   @default(false)
  manageUserRoles Boolean   @default(false)
  manageEvents    Boolean   @default(false)
  createRoles     Boolean   @default(false)

  users           User[]    @relation("Role") 
}

model Post {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt   DateTime  @default(now())
  title       String    @db.VarChar(255)
  content     String?
  published   Boolean   @default(false)
  views       Int       @default(0)
  titleImage  String
  gallery     String[]  @default([])

  authorId    String    @db.Uuid
  author      User      @relation("Author", fields: [authorId], references: [id])

  publishedById String? @db.Uuid
  publishedBy User?     @relation("Published", fields: [publishedById], references: [id])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String     @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Account {
  id                 String   @id @default(cuid())
  userId             String   @db.Uuid
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}